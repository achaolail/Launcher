<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_main"
    android:background="@drawable/bg11"
    android:orientation="horizontal"
    tools:context="com.airecenter.we.MainActivity" >

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="20dp"
        android:src="@drawable/left"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0" >

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/family_call"
            android:layout_width="267dp"
            android:layout_height="173dp"
            android:selectAllOnFocus="true"
            android:src="@drawable/family_call"
            android:background="@drawable/sel_focus"
            />

        <ImageButton
            android:id="@+id/move_play"
            android:selectAllOnFocus="true"
            android:layout_width="267dp"
            android:layout_height="173dp"
            android:layout_below="@id/family_call"
            android:layout_marginTop="20dp"
            android:src="@drawable/move_play"
            android:scaleType="fitXY"
            android:background="@drawable/sel_focus" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="850dp"
            android:layout_height="363dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/family_call"
            android:focusableInTouchMode="false"
            android:background="@drawable/image1" />

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/home_safe"
            android:selectAllOnFocus="true"
            android:layout_width="267dp"
            android:layout_height="173dp"
            android:layout_below="@id/move_play"
            android:layout_marginTop="20dp"
            android:src="@drawable/home_safe"
            android:background="@drawable/sel_focus" />

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/health"
            android:selectAllOnFocus="true"
            android:layout_width="267dp"
            android:layout_height="173dp"
            android:layout_below="@id/viewpager"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/home_safe"
            android:src="@drawable/health" 
            android:background="@drawable/sel_focus"/>

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/onLine_education"
            android:selectAllOnFocus="true"
            android:layout_width="267dp"
            android:layout_height="173dp"
            android:layout_below="@id/viewpager"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/health"
            android:src="@drawable/on_line_education" 
            android:background="@drawable/sel_focus"/>

        <ImageButton
            android:scaleType="fitXY"
            android:id="@+id/doctor"
            android:selectAllOnFocus="true"
            android:layout_width="267dp"
            android:layout_height="173dp"
            android:layout_below="@id/viewpager"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/onLine_education"
            android:src="@drawable/online_doctor" 
            android:background="@drawable/sel_focus"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/startapps"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:focusable="true"
        android:padding="20dp"
        android:src="@drawable/right" 
        android:background="@drawable/sel_focus"/>

</LinearLayout>